{
    "name": "heidelpay/php-payment-api",
    "description": "New client library for heidelpay payments replacing heidelpay/php-api.",
    "license": "proprietary",
    "require": {
        "php": ">=7.1",
        "lib-curl": "*",
        "lib-openssl": "*",
        "ext-SimpleXML": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "codeception/codeception": "^4.1",
        "codeception/aspect-mock": "^3.1",
        "heidelpay/php-basket-api": "^1.0",
        "monolog/monolog": "^1.25",
        "codeception/module-asserts": "^1.2"
    },
    "suggest": {
        "heidelpay/php-message-code-mapper": "You can use this package to provide user-friendly messages instead of error codes.",
        "heidelpay/php-basket-api": "Use this package to transmit basket information."
    },
    "autoload": {
        "psr-4": {
            "Heidelpay\\PhpPaymentApi\\": "lib"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Heidelpay\\Tests\\PhpPaymentApi\\": "tests",
            "Heidelpay\\Tests\\PhpPaymentApi\\Helper\\": "tests\\Helper"
        }
    },
    "support": {
        "email": "development@heidelpay.com"
    },
    "homepage": "http://dev.heidelpay.com",
    "type": "library",
    "keywords": [
        "payment-api",
        "php",
        "api",
        "sdk"
    ],
    "replace": {
        "heidelpay/php-api":"*"
    },
    "conflict": {
        "heidelpay/php-api":"*"
    }
}
